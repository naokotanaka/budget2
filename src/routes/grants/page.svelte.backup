      const targetYear = monthCol.year;
      const targetMonth = monthCol.month;
      const targetDate = targetYear * 100 + targetMonth; // YYYYMMå½¢å¼ã§æ¯”è¼ƒ
      const filterStartDate = settings.monthFilterStartYear * 100 + settings.monthFilterStartMonth;
      const filterEndDate = settings.monthFilterEndYear * 100 + settings.monthFilterEndMonth;
      
      // çµã‚Šè¾¼ã¿ç¯„å›²å¤–ã®æœˆã¯ã‚¹ã‚­ãƒƒãƒ—
      if (targetDate < filterStartDate || targetDate > filterEndDate) {
        return;
      }
      
      // ç¾åœ¨ã®å¹´æœˆã‚’å–å¾—
      const now = new Date();
      const currentYear = now.getFullYear();
      const currentMonth = now.getMonth() + 1;
      
      // å¯¾è±¡æœˆãŒéå»ãƒ»ç¾åœ¨ãƒ»æœªæ¥ã‹ã‚’åˆ¤å®š
      const isCurrentOrPast = 
        targetYear < currentYear || 
        (targetYear === currentYear && targetMonth <= currentMonth);
      
      // äºˆç®—é¡ï¼šå®Ÿéš›ã«æ•°å€¤ãŒè¡¨ç¤ºã•ã‚Œã‚‹å ´åˆã®ã¿åˆè¨ˆ
      if (monthlyBudget > 0) {
        totalBudget += monthlyBudget;
      }
      
      // ä½¿ç”¨é¡ï¼šç¾åœ¨æœˆã¾ã§0ã‚’åˆè¨ˆã€æœªæ¥æœˆã¯"-"è¡¨ç¤ºãªã®ã§åˆè¨ˆã«å«ã‚ãªã„
      if (isCurrentOrPast) {
        const monthlyUsed = 0; // ç¾åœ¨æœˆã¾ã§ä½¿ç”¨é¡ã¯0
        totalUsed += monthlyUsed;
      }
      // æœªæ¥ã®æœˆã¯ "-" è¡¨ç¤ºãªã®ã§åˆè¨ˆã«å«ã‚ãªã„
      
      // æ®‹é¡ï¼šç¾åœ¨æœˆã¾ã§ã¯äºˆç®—é¡ãŒãã®ã¾ã¾æ®‹é¡ã€æœªæ¥æœˆã¯"-"è¡¨ç¤ºãªã®ã§åˆè¨ˆã«å«ã‚ãªã„
      if (isCurrentOrPast && monthlyBudget > 0) {
        const monthlyUsed = 0; // ä½¿ç”¨é¡0
        const monthlyRemaining = monthlyBudget - monthlyUsed; // äºˆç®—é¡ãŒãã®ã¾ã¾æ®‹é¡
        totalRemaining += monthlyRemaining;
