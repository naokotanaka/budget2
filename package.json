{
  "name": "nagaiku-budget-v2",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --host 0.0.0.0 --port 3002",
    "dev:clean": "./universal-dev-clean.sh",
    "dev:simple": "./dev-clean-start.sh",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 3002",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:ui": "vitest --ui --config vitest.config.ts",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "start": "PORT=3002 node build"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^5.2.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/svelte": "^5.0.0",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.10",
    "@types/tabulator-tables": "^6.2.10",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "tabulator-tables": "^6.3.1",
    "zod": "^4.0.14"
  }
}
